<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="starovoitov" id="comments-create-table-4">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="comments"/>
            </not>
        </preConditions>
        <createTable schemaName="app" tableName="comments">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="comments_id_pkey"/>
            </column>
            <column name="comments" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_comments_user"/>
            </column>
        </createTable>
        <createSequence sequenceName="comments_seq" schemaName="app" startValue="1" minValue="1" incrementBy="1" />
        <addForeignKeyConstraint baseTableSchemaName="app" baseTableName="comments" baseColumnNames="user_id" constraintName="fk_comments_user" referencedTableSchemaName="app" referencedTableName="user"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>