<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="starovoitov" id="order-create-table-7">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>
        <createTable schemaName="app" tableName="order">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="order_id_pkey"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order_user"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="app" baseTableName="order" baseColumnNames="user_id" constraintName="fk_order_user" referencedTableSchemaName="app" referencedTableName="user"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>